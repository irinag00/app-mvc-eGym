@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Verificación del código de recuperación";
}

<h1>@ViewData["Title"]</h1>
<hr />
<p>
    Ha solicitado iniciar sesión con un código de recuperación. Este inicio de sesión no se recordará hasta que proporcione
    un código de aplicación de autenticación al iniciar sesión o deshabilitar 2FA e iniciar sesión nuevamente.
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                <label asp-for="Input.RecoveryCode" class="form-label"></label>
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-dark">Iniciar Sesión</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
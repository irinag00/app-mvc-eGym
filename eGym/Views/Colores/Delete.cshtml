@model eGym.Models.Color

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar elemento</h1>

<h3>Desea eliminar este elemento?</h3>
<div>
    <h4>Color</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.imagenColor)
        </dt>
        <dt class="col-sm-2">
            <input type="hidden" name="foto" id="foto" value="@Model.imagenColor" />
            <img src="@(!string.IsNullOrEmpty(Model.imagenColor) ? "/pictures/img-colores/"+Model.imagenColor : "")" id="imagen" class="rounded-circle" style="max-width:150px" />
        </dt>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idColor" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-outline-dark" asp-action="Index"><i class="bi bi-arrow-return-left"></i> Volver a la Lista</a>
    </form>
</div>

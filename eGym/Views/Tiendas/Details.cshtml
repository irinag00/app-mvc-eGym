@model eGym.Models.Tienda

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Tienda</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.resumen)
        </dt>
        <dd class = "col-sm-10">
            <a href="@Html.DisplayFor(model => model.resumen)" target="_blank">@Html.DisplayFor(model => model.resumen)</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.imagenTienda)
        </dt>
        <dt class="col-sm-10">
            <input type="hidden" name="foto" id="foto" value="@Model.imagenTienda" />
            <img src="@(!string.IsNullOrEmpty(Model.imagenTienda) ? "/pictures/img-tienda/"+Model.imagenTienda: "")" id="imagen" class="rounded-circle" style="max-width:150px" />
        </dt>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model?.idTienda">Editar</a>
    }
    <a class="btn btn-outline-dark" asp-action="Index"><i class="bi bi-arrow-return-left"></i> Volver a la Lista</a>
</div>

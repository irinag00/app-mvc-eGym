@model eGym.Models.Ropa

@{
    ViewData["Title"] = "Detalle";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Html.DisplayFor(modelItem => Model.nombre)
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-6 justify-content-center">
                    @if (!string.IsNullOrEmpty(Model.imagenRopa))
                    {
                        <img src="~/pictures/img-ropa/@Model.imagenRopa" width="150%" asp-append-version="true" />
                    }
                </div>
                <div>
                    <div class="card-body">
                        <p class="card-text"><b>@Html.DisplayNameFor(model => model.detalles): </b> @Html.DisplayFor(modelItem => Model.detalles)</p>
                        <p class="card-text"><b>@Html.DisplayNameFor(model => model.Categoria): </b> @Html.DisplayFor(modelItem => Model.Categoria.nombre)</p>
                        <p class="card-text"><b>@Html.DisplayNameFor(model => model.Marca): </b> @Html.DisplayFor(modelItem => Model.Marca.nombre)</p>
                        <p class="card-text"><b>@Html.DisplayNameFor(model => model.Tienda): </b> @Html.DisplayFor(modelItem => Model.Tienda.nombre)</p>
                        <p class="card-text">
                            <b>Colores: </b>
                            <hr />
                            <div class="row">
                                <p>@Html.DisplayFor(modelItem => Model.ropas_colores)</p>
                                @foreach (var Color in Model.ropas_colores) 
                                {
                                    <div class="column text-center">
                                       @* @if (!string.IsNullOrEmpty(@color.color.imagenColor))
                                        {
                                            <img src="~/pictures/img-colores/@color.color.imagenColor" class="rounded-circle" style="max-width:150px" asp-append-version="true" />
                                        }
                                        @*<img class="border-info rounded-circle" src="@color.color.imagenColor" style="max-width: 150px" />*@

                                        <a asp-controller="Colores" asp-action="Details" asp-route-id="@Color.idColor">@Html.DisplayFor(modelItem => Color.color.nombre)</a>
                                    </div>
                                }
                            </div>
                        </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-success text-white"><i class="bi bi-cart-plus"></i> Añadir al carrito ($@Html.DisplayFor(modelItem => Model.precio))</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

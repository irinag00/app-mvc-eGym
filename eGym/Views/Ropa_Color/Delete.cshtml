@model eGym.Models.Ropa_Color

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar elemento</h1>

<h3>Desea eliminar este elemento?</h3>
<div>
    <h4>Ropa_Color</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ropa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ropa.idRopa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.color.idColor)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="idRopa" />
        <input type="hidden" asp-for="idColor" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-outline-dark" asp-action="Index"><i class="bi bi-arrow-return-left"></i> Volver a la Lista</a>
    </form>
</div>

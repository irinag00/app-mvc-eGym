@model List<eGym.ModelsView.UserRolesView>

    @{
        ViewData["Title"] = "Lista de Usuarios y Roles";
    }

    <h1>Usuarios y Roles</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <table class="table">
                <thead>
                    <tr>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Roles</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                @item.UserName
                            </td>
                            <td class="align-middle">
                                @item.Email
                            </td>
                            <td class="align-middle">
                                @string.Join(",", item.Roles)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
<a class="btn btn-outline-dark" asp-controller="Ropas" asp-action="Index"><i class="bi bi-arrow-return-left"></i> Volver a la Lista</a>
